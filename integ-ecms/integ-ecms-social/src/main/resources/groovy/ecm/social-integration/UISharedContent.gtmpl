     						  <a href="javascript:void(0)" data-caption="$captionConfirmation"
                                    data-confirm="$labelToDeleteThisActivity" data-close="$labelClosebutton"
                                    data-ok="$labelConfirmbutton"
                                    data-delete="<%=uicomponent.event("DeleteActivity", uicomponent.getId(), "");%>"
